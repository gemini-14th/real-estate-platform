generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://neondb_owner:npg_j42UbhFdKcaT@ep-solitary-sky-ahrgs48p-pooler.c-3.us-east-1.aws.neon.tech/neondb?sslmode=require"
}

model Property {
  id           String   @id @default(cuid())
  title        String
  price        Float
  location     String
  videoUrl     String
  thumbnailUrl String
  description  String
  beds         Int
  baths        Int
  sqft         Int
  type         String
  tags         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  agentName    String?
  agentAvatar  String?  
  
  savedBy      SavedProperty[]
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  saved     SavedProperty[]
}

model SavedProperty {
  id         String   @id @default(cuid())
  userId     String
  propertyId String
  createdAt  DateTime @default(now())
  
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  @@unique([userId, propertyId])
}
